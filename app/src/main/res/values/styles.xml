<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/texgyre</item>

    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/whiteText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily" >@font/texgyre</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppBar" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedAppBar" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Rating Dialog -->
    <style name="MyRatingDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyRatingDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyRatingDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyRatingDialogButtonStyle</item>
    </style>

    <style name="MyRatingDialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MyRatingDialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
