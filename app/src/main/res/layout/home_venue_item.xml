<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/venue_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/venue_name"
            tools:text="ABS convention center"
            android:textColor="@color/darkBlueColor"
            android:background="@color/whiteText"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/texgyre"
            android:layout_below="@id/venue_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<TextView
            android:id="@+id/venue_price"
            android:text="@string/tk_100000"
            android:textColor="@color/darkBlueColor"
            android:background="@color/whiteText"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/texgyre"
            android:layout_below="@id/venue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded,RtlSymmetry" />-->

        <LinearLayout
            android:id="@+id/layout_priceX"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_below="@id/venue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bdt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/texgyre"
                android:textColor="@color/blackColor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/venue_price"
                tools:text="1,00,000"
                android:textSize="17sp"
                android:fontFamily="@font/texgyre"
                android:textColor="@color/blackColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>